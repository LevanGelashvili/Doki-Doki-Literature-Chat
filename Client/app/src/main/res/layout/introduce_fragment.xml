<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/choose_image"

        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:scaleX="0.7"
        android:scaleY="0.7"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/choose_profile_pic" />

    <EditText
        android:id="@+id/nickname_textField"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:background="@drawable/introduce_edittext_rect"
        android:hint="@string/enter_your_nickname"
        android:textAlignment="center"
        android:textSize="20sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_image">

    </EditText>

    <EditText
        android:id="@+id/what_i_do_textField"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:background="@drawable/introduce_edittext_rect"
        android:hint="@string/what_i_do"
        android:textAlignment="center"
        android:textSize="20sp"

        android:layout_marginTop="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nickname_textField">

    </EditText>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_button"

        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"

        android:text="@string/start"
        android:textSize="18sp"
        android:textColor="@android:color/white"

        android:layout_marginTop="40dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:backgroundTint="@color/introduce_button_color"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/what_i_do_textField" />



</androidx.constraintlayout.widget.ConstraintLayout>