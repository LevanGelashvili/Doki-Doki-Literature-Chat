<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message_sent_bubble"
        android:layout_width="@dimen/message_bubble_width"
        android:layout_height="wrap_content"

        android:textColor="@android:color/white"

        android:background="@drawable/message_sent_bubble"
        android:gravity="center"

        android:padding="@dimen/message_bubble_padding"
        android:layout_marginEnd="@dimen/message_bubble_margin"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/message_sent_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="@dimen/message_bubble_padding"

        android:textColor="@android:color/darker_gray"

        app:layout_constraintBottom_toBottomOf="@+id/message_sent_bubble"
        app:layout_constraintEnd_toStartOf="@+id/message_sent_bubble"
        app:layout_constraintTop_toTopOf="@+id/message_sent_bubble" />

</androidx.constraintlayout.widget.ConstraintLayout>